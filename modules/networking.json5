{
  module: {
    name: "networking",
    vars: {
      hostname: "string",
      hosts: "array"
    }
  },
  config: {
    files: [
      {
        path: '/etc/hostname',
        template: 'templates/networking/hostname',
        context: {
          hostname: {{vars.hostname | json_encode()}},
        }
      },
      {
        path: '/etc/hosts',
        template: 'templates/networking/hosts',
        context: {
          hosts: {{vars.hosts | json_encode()}},
        }
      }
    ]
  }
}
